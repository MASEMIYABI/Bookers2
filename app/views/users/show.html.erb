<%= render 'books/list',user: @user,book: @book%>

<div class='col-md-8 offset-md-1'>
<h2>Books</h2>
 <table class='table table-hover table-inverse'>

    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |t| %>
  <tr>
  <td><%=link_to user_path(t.user)do%><%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size: "40x40" %><% end %></td>
  <td><%= link_to t.title,book_path(t.id) %></td>
  <td><%=t.body %></td>
  </tr>
  <% end %>
  </tbody>
</div>
</table>