
<%= render 'books/list',user: @user,book: @book%>


<div class='col-md-8 offset-md-1'>
 <h2>Users</h2>
 <table class='table table-hover table-inverse'>

 <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
   <%@users.each do |t| %>
   <tr>
   <td><%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size: "100x100" %></td>
   <td><%=t.name %></td>
   <td><%=link_to "show",user_path(t.id)%></td>
   </tr>
   <% end %>

   </tbody>
   </table>


